<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Account</title>
    <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.css">
</head>

<style>
    body {
        background-color: #ecf0f5;
    }

    form {
        margin-left: auto;
    }

    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        width: 50%;
        margin-top: 2em;
    }

    .username, .email {
        margin: .5em 0;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .form-btns {
        display: flex;
        flex-direction: row;
        width: 100%;
    }

    .form-btns button {
        width: 9em;
    }
</style>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                  <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/home">Home</a>
                    <a class="nav-item nav-link loginitem active" href="#">Account <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link loginitem" href="/newpost">New Post</a>
                    <a class="nav-item nav-link loginitem" href="/editprofile">Edit Profile</a>
                  </div>
                  <form action="/logout" method="post">
                    <button class="logout-btn">Logout</button>
                  </form>
                </div>
              </nav>
        </header>
        <main>
            <div class="card">
                <div class="card-body">
                    <h2>Profile</h2>
                    <hr>
                    <div class="username"><%= username %></div>
                    <hr>
                    <div class="email"><%= email %></div>
                    <hr>
                    <div class="form-btns">
                        <form action="/editprofile" method="get">
                            <button style="border-color:#343a40" type="submit" class="btn btn-primary bg-dark">Edit</button>
                        </form>
                        <form action="/deleteuser" method="post">
                            <button style="border-color:#343a40" type="submit" class="btn btn-primary bg-dark">DELETE USER</button>
                        </form>
                    </div>
                </div>
              </div>
        </main>
    </div>
</body>

<script>
    const inputEmail = document.getElementById('email');
    const inputText = document.getElementById('username');
    
    fetch('http://localhost:3000/account', {
        method: 'GET'
    })
    .then((response) => {
        response.json();
    })
    .then(data => {
        console.log(data.username, data.email);
    });
</script>
</html>