<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.css">
</head>

<style>
    body {
        background-color: #ecf0f5;
    }

    form {
        margin-left: auto;
    }

    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        width: 50%;
        margin-top: 2em;
    }

    .card-text {
        border: 1px solid #777777;
        border-radius: 5px;
        padding: .25em;
    }
</style>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                  <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/home">Home</a>
                    <a class="nav-item nav-link loginitem" href="/account">Account</a>
                    <a class="nav-item nav-link loginitem" href="/newpost">New Post</a>
                    <a class="nav-item nav-link loginitem active" href="#">Edit Profile<span class="sr-only">(current)</span></a>
                  </div>
                  <form action="/logout" method="post">
                    <button class="logout-btn">Logout</button>
                  </form>
                </div>
              </nav>
        </header>
        <main>
            <div class="card">
                <div class="card-body">
                    <h3><%= username%></h3>
                    <hr>
                    <form action="/updateusername" method="post" id="user-edit">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username">
                        </div>
                        <button style="border-color:#343a40" type="submit" class="btn btn-primary bg-dark">Update Username</button>
                    </form>
                    <hr>
                    <form action="/updateemail" method="post" id="email-edit">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email">
                        </div>
                        <button style="border-color:#343a40" type="submit" class="btn btn-primary bg-dark">Update Email</button>
                    </form>
                </div>
              </div>
        </main>
    </div>
</body>

<script>
    document.querySelector('#user-edit').addEventListener('submit', (event) => {
        event.preventDefault();
        fetch(event.target.action, {
            method: 'POST',
            body: new URLSearchParams(new FormData(event.target))
        }).then(response => {
            return response.json();
        }).then(data => {
            alert(data.msg);
        }).catch(err => {
            console.error(err);
        });
    });

    document.querySelector('#email-edit').addEventListener('submit', (event) => {
        event.preventDefault();
        fetch(event.target.action, {
            method: 'POST',
            body: new URLSearchParams(new FormData(event.target))
        }).then(response => {
            return response.json();
        }).then(data => {
            alert(data.msg);
        }).catch(err => {
            console.error(err);
        });
    });

</script>
</html>